<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dblue_background"
    android:elevation="8dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:id="@+id/pt_profile"
            android:background="@drawable/round_shape">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/lato_black"
                android:text="name"
                android:textColor="@color/whitelang"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/pt_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/lato"
                android:text="position"
                android:textColor="@color/whitelang"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/pt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/lato"
                android:text="email"
                android:textColor="@color/whitelang"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/pt_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/lato"
                android:text="number"
                android:textColor="@color/whitelang"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/schedule_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule:"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/lato"
                android:textColor="@color/whitelang"
                android:textSize="12sp"/>


            <TextView
                android:id="@+id/pt_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/lato"
                android:text="loading data..."
                android:textColor="@color/whitelang"
                android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
